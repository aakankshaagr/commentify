doctype html
html(lang="en")
  head
    title Commentify - Comment Bot
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
  body
    include includes/nav.pug
    .container.mt-5
      include includes/auth.pug
      .row
        .col-md-6
          h3 Post a Comment
          form#commentForm(method="post" action="/post")
            .form-group
              label(for="videoId") Video ID
              input#videoId.form-control(type="text" placeholder="Enter YouTube Video ID" name="videoId" required)
            .form-group
              label(for="channelId") Channel ID
              input#channelId.form-control(type="text" placeholder="Enter YouTube Channel ID" name="channelId" required)
            .form-group
              label(for="text") Comment Text
              textarea#text.form-control(rows="3" placeholder="Write your comment here..." name="text" required)
            button.btn.btn-success(type="submit") Post
