
doctype html
html(lang="en")
  head
    title Commentify - Comment Bot
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
  body
    include includes/nav.pug
    .container.mt-5
      include includes/auth.pug
      .row
        .col-md-6
          h3 Channel ID
          form#searchForm(method='post', action='/submit')
            .form-group
              label(for="channelName") Channel Name
              input#channelName.form-control(type="text" placeholder="Enter YouTube channel Name" name="channelName" required)
            
            button.btn.btn-success(type="submit") Search 
             if typeof error !== 'undefined'
                p#channelIdResult Error: #{error}
  